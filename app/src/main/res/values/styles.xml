<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    TOOLBAR-->

    <style name="BaseToolBarStyle">
        <item name="android:background">?attr/colorSurfaceContainerLow</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="BaseToolBarStyle.Centered">
        <item name="titleCentered">true</item>
    </style>

<!--    CARDS-->

    <style name="BaseCardViewStyle">
        <item name="cardCornerRadius">@dimen/app_base_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
    </style>

    <style name="BaseCardViewStyle.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/app_base_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
    </style>

    <style name="BaseCardViewStyle.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/app_base_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
    </style>

    <style name="BaseCardViewStyle.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/app_base_corner_radius</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainer</item>
    </style>

<!--    TEXT-->

    <style name="BaseTextStyle">
        <item name="fontFamily">@font/app_medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="BaseTextStyle.light">
        <item name="fontFamily">@font/app_light</item>
    </style>

    <style name="BaseTextStyle.bold">
        <item name="fontFamily">@font/app_bold</item>
    </style>

    <style name="BaseTextStyle.black">
        <item name="fontFamily">@font/app_black</item>
    </style>

    <style name="BaseTextStyle.regular">
        <item name="fontFamily">@font/app_regular</item>
    </style>

    <style name="BaseTextStyle.thin">
        <item name="fontFamily">@font/app_thin</item>
    </style>

    <style name="BaseTextStyle.Error" parent="BaseTextStyle.regular">
        <item name="android:textColor">?attr/colorError</item>
        <item name="drawableStartCompat">@drawable/ic_error</item>
        <item name="drawableTint">?attr/colorError</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

<!--    RADIO BUTTON-->

    <style name="BaseRadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

<!--    EDIT TEXT-->

    <style name="BaseEditTextStyle" parent="BaseTextStyle.regular">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text|textAutoComplete|textAutoCorrect|textCapSentences</item>
    </style>

    <style name="BaseEditTextStyle.MultiLine">
        <item name="android:inputType">text|textAutoComplete|textAutoCorrect|textCapSentences|textImeMultiLine|textMultiLine</item>
    </style>

<!--    BOTTOM SHEET-->

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">

    </style>

</resources>