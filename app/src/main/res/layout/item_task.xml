<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvTaskCard"
    style="@style/BaseCardViewStyle.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTagName"
            style="@style/BaseTextStyle.regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Учеба" />

        <TextView
            android:id="@+id/tvTaskName"
            style="@style/BaseTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Какое то дело очень fgfgdsf gdfs g sdfg sdfgsd sdfg sdf sdfgsdfgsdfg sgdfg sdfs dfgsd fgsd fgsd" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>